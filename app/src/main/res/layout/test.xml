<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name: " />

            <EditText
                android:id="@+id/post_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" ............"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:background="@android:color/transparent"
                android:padding="15dp"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Group: " />

            <EditText
                android:id="@+id/post_blood_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="........"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:padding="15dp"
                />
            <Spinner
                android:id="@+id/spinner1"
                android:layout_marginLeft="1dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:entries="@array/blood_group_arrays" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donation Date: " />

            <EditText
                android:id="@+id/post_donation_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Choose Date"
                android:focusableInTouchMode="false"
                android:maxLines="1"

                android:background="@android:color/transparent"
                android:padding="15dp"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Amount: " />

            <EditText
                android:id="@+id/post_blood_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="...."
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:padding="15dp"
                />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:entries="@array/blood_amount" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number: " />

            <EditText
                android:id="@+id/post_donation_contact_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="....."
                android:maxLines="1"
                android:inputType="phone"
                android:maxLength="14"
                android:background="@android:color/transparent"
                android:padding="15dp"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donation Place: " />

            <EditText
                android:id="@+id/post_donation_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="......"
                android:maxLines="1"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:background="@android:color/transparent"
                android:padding="15dp"
                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donation Type: " />

            <EditText
                android:id="@+id/post_donation_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="...."
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:padding="15dp"
                />
            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:entries="@array/donation_type" />

        </LinearLayout>



        <Button
            android:id="@+id/button_post_request"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Request"
            android:layout_gravity="center"
            android:background="@drawable/button_shape"
            android:textColor="#fff"
            android:layout_margin="10dp"
            />


    </LinearLayout>


</ScrollView>
