<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Add new donation request !"
                android:textSize="15dp"
                android:padding="5dp"
                android:textAlignment="center"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_border_form"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/post_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" Your full name"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_border_form"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood Group: "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/post_blood_type"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="false"
                    android:maxLines="1"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_marginStart="10dp"

                    />
                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_marginLeft="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:entries="@array/blood_group_arrays"
                    android:layout_weight="0.75" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_border_form"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donation Date: "
                    android:textSize="17sp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/post_donation_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="choose date"
                    android:focusableInTouchMode="false"
                    android:maxLines="1"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_border_form"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood Amount: "
                    android:textSize="16dp"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/post_blood_amount"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="false"
                    android:maxLines="1"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_marginStart="10dp"

                    />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:entries="@array/blood_amount" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_border_form"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Number: "
                    android:textSize="14dp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/post_donation_contact_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="9843194645"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"

                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_border_form"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donation Place: "
                    android:textSize="@dimen/ftsize"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/post_donation_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" Norvic Hospital"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:layout_marginStart="10dp"
                    />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_border_form"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donation Time: "
                    android:textSize="16dp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/post_donation_type"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="false"
                    android:maxLines="1"
                    android:hint="Select Time"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="10dp"
                    android:gravity="center"

                    />

            </LinearLayout>



            <Button
                android:id="@+id/button_post_request"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Request"
                android:layout_gravity="center"
                android:background="@drawable/button_shape"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />


        </LinearLayout>


    </android.support.v7.widget.CardView>





</ScrollView>
